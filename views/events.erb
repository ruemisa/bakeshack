<section class="events">

        <% @events.each do |event| %>
    <div class="list">  
        <h3><%= event['name']['text'] %> </h3>
        <img src=<%= event['logo']['url'] %> >
        <p> <%= event['description']['text'].slice(0..100) %>... </p>
        <a href=<%= event['url'] %> target="_blank" class="event-link"> Read More  > </a>
    </div>  
        <% end %>


</section> 